{
  "extends": "./.civet-kit/tsconfig.json",
  "compilerOptions": {
    // "checkJs": true,
    // "skipLibCheck": true,
    // "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true
  },
  "compileOnSave": false,
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2020"
    }
  }
}
